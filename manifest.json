{
  
  "manifest_version": 2,
  "name": "EasyOnTheEyes",
  "version": "0.1",
  
  "description": "Simple reminder to take a break from the computer every 20 minutes for at least 20 seconds.",
  
  "icons": {
    "48": "icons/timer-48.png",
    "96": "icons/timer-96.png"
  },
  
  "browser_action": {
    "default_popup": "panel.html",
    "default_icon": {
      "48": "icons/timer-48.png",
      "96": "icons/timer-96.png"
    },
    "default_title": "EasyOnTheEyes"
  },
  
  "permissions": [
    "alarms",
    "background",
    "notifications"
  ],
  
  "background": {
    "scripts": ["background.js", "easyOnTheEyes.js"]
  }
  
}